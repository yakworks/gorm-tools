import gorm.tools.repository.errors.api.ApiError

/**
 * Renders validation errors according to vnd.error: https://github.com/blongden/vnd.error
 */
model {
  ApiError apiError
}

// per rfc-7807 https://opensource.zalando.com/restful-api-guidelines/#176
response.contentType "application/problem+json"

response.status apiError.status.value()

json {
  status apiError.status.value()
  title apiError.title
  detail apiError.detail
  if(apiError.errors){
    errors apiError.errors
  }
}
