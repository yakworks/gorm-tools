import gorm.tools.rest.error.ApiValidationError


/**
 * Renders validation errors according to vnd.error: https://github.com/blongden/vnd.error
 */
model {
  ApiValidationError apiValidationError
}

response.contentType "application/vnd.error"
response.status apiValidationError.status

json {
  status apiValidationError.status.value()
  title apiValidationError.title
  detail apiValidationError.detail
  errors apiValidationError.errors
}
